<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="618.0" prefWidth="1301.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="construccionfinal.controladores.EvaluarEstudiante.FXMLEvaluarEstudianteController">

    <children>

        <!-- Título -->
        <Label layoutX="30" layoutY="20" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Evaluación de Estudiante" />

        <!-- Tabla de Evaluación -->
        <TableView fx:id="tablaEvaluacion" layoutX="30.0" layoutY="70.0" prefHeight="470.0" prefWidth="1235.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colCriterio" prefWidth="523.0" text="Criterio / Puntaje" />
                <TableColumn fx:id="colCompetente" prefWidth="149.0" text="Competente (5)" />
                <TableColumn fx:id="colIndependiente" prefWidth="167.0" text="Independiente (4)" />
                <TableColumn fx:id="colBasicoAvanzado" prefWidth="139.0" text="Básico Avanzado (3)" />
                <TableColumn fx:id="colBasicoUmbral" prefWidth="128.0" text="Básico (2)" />
                <TableColumn fx:id="colNoCompetente" prefWidth="127.0" text="No Competente (1)" />
            </columns>
        </TableView>

        <!-- Botones Evaluar y Salir -->
        <HBox alignment="CENTER" layoutX="387.0" layoutY="553.0" prefHeight="0.0" prefWidth="350.0" spacing="50">
            <children>
                <Button fx:id="btnEvaluar" onAction="#clicEvaluar" prefHeight="45" prefWidth="150" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;" text="✅ Evaluar" />

                <Button fx:id="btnSalir" onAction="#clicSalir" prefHeight="45" prefWidth="150" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;" text="❌ Salir" />
            </children>
        </HBox>

    </children>

</AnchorPane>
