<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="750.0" prefWidth="1093.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="construccionfinal.controladores.EvaluarEstudiante.FXMLEvaluarEstudianteController">

    <children>

        <!-- Título -->
        <Label layoutX="30" layoutY="20" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Evaluación de Estudiante" />

        <!-- Tabla de Evaluación -->
        <TableView fx:id="tablaEvaluacion" layoutX="30.0" layoutY="70.0" prefHeight="470.0" prefWidth="1020.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colCriterio" prefWidth="190.0" text="Criterio / Puntaje" />
                <TableColumn fx:id="colCompetente" prefWidth="160.0" text="Competente (9-10)" />
                <TableColumn fx:id="colIndependiente" prefWidth="150.0" text="Independiente (8-9)" />
                <TableColumn fx:id="colBasicoAvanzado" prefWidth="181.0" text="Básico Avanzado (7-8)" />
                <TableColumn fx:id="colBasicoUmbral" prefWidth="179.0" text="Básico Umbral (6-7)" />
                <TableColumn fx:id="colNoCompetente" prefWidth="163.0" text="No Competente (5)" />
            </columns>
        </TableView>

        <!-- Campo de observaciones -->
        <Label layoutX="30.0" layoutY="555.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Observaciones:" />
        <TextArea fx:id="txtObservaciones" layoutX="30.0" layoutY="585.0" prefHeight="100" prefWidth="1020.0" promptText="Escribe aquí las observaciones sobre el desempeño del estudiante..." style="-fx-font-size: 16px; -fx-border-radius: 8;" />

        <!-- Botones Evaluar y Salir -->
        <HBox alignment="CENTER" layoutX="400.0" layoutY="700.0" prefHeight="50" spacing="50">
            <children>
                <Button fx:id="btnEvaluar" onAction="#clicEvaluar" prefHeight="45" prefWidth="150" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;" text="✅ Evaluar" />

                <Button fx:id="btnSalir" onAction="#clicSalir" prefHeight="45" prefWidth="150" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;" text="❌ Salir" />
            </children>
        </HBox>

    </children>

</AnchorPane>
