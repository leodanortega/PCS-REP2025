<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="700.0" prefWidth="824.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="construccionfinal.controladores.EvaluarOV.FXMLConfirmarDatosController">
   <children>
   
       <VBox alignment="CENTER" layoutX="5.0" prefHeight="640.0" prefWidth="817.0" spacing="25" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="30">
      <children>
      
              <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Confirma tu evaluación" />
      
              <GridPane hgap="20" vgap="20">
                  <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" />
                      <ColumnConstraints hgrow="ALWAYS" />
                  </columnConstraints>
      
                  <children>
                      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nombre del alumno:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                      <Label fx:id="lblNombreAlumno" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
                      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Matrícula:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                      <Label fx:id="lblMatricula" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
                      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nombre del proyecto:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                      <Label fx:id="lblNombreProyecto" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
                      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Organización vinculada:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                      <Label fx:id="lblOrganizacion" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
                      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Responsable del proyecto:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                      <Label fx:id="lblResponsableProyecto" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  </children>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
              </GridPane>
      
              <!-- Sección de criterios y puntuación seleccionada -->
              <ScrollPane fitToWidth="true" prefHeight="225.0" prefWidth="694.0">
         <content>
                     <VBox spacing="20">
                         <children>
                             <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Criterios evaluados y puntuación:" />
                             <VBox fx:id="vbCriteriosEvaluados" spacing="15" />
                         </children>
                     </VBox>
         </content>
              </ScrollPane>
      
              <!-- Botones de acción -->
              <HBox alignment="CENTER" spacing="50">
                  <children>
                      <Button onAction="#clicGuardar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" text="💾 Guardar" />
      
                      <Button onAction="#clicCancelar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" text="❌ Cancelar" />
                  </children>
              </HBox>
      </children>
   
           <padding>
               <Insets bottom="30" left="35" right="35" top="30" />
           </padding>
   
       </VBox>
   </children>

</AnchorPane>
