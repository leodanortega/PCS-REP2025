<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="construccionfinal.controladores.RegistrarResponsable.FXMLRegistrarResponsableController"
            prefHeight="600.0" prefWidth="700.0">

    <VBox spacing="25" layoutX="40.0" layoutY="20.0"
          AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30"
          AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30">

        <children>
            <Label text="Registrar Responsable de Proyecto"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

            <GridPane hgap="15" vgap="12">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <children>
                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Apellido Paterno:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfApePaterno" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Apellido Materno:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfApeMaterno" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Correo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfCorreo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="TelÃ©fono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfTelefono" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Puesto:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfPuesto" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <Separator/>

            <HBox spacing="40" alignment="CENTER">
                <children>
                    <Button text="Registrar" onAction="#clicRegistrar"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 16;"/>

                    <Button text="Salir" onAction="#clicSalir"
                            style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 16;"/>
                </children>
            </HBox>
        </children>

        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>
    </VBox>

</AnchorPane>