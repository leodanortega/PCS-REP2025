<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="construccionfinal.controladores.RegistrarOV.FXMLConfirmacionDatosController">
   <children>
   
       <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
   
           <children>
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="¿Los datos ingresados son correctos?" />
   
               <GridPane hgap="15" vgap="15">
                   <columnConstraints>
                       <ColumnConstraints halignment="RIGHT" maxWidth="162.0" minWidth="109.0" prefWidth="141.0" />
                       <ColumnConstraints hgrow="ALWAYS" maxWidth="276.0" minWidth="223.0" prefWidth="244.0" />
                   </columnConstraints>
   
                   <children>
                       <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                       <Label fx:id="lblNombre" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
                       <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                       <Label fx:id="lblCorreo" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
                       <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                       <Label fx:id="lblDescripcion" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
                       <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="RFC:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                       <Label fx:id="lblRFC" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
                       <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                       <Label fx:id="lblTelefono" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
                       <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                       <Label fx:id="lblTipo" style="-fx-font-size: 16px; -fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                   </children>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               </GridPane>
   
               <HBox alignment="CENTER" spacing="40">
                   <children>
                       <Button onAction="#clicAceptar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" text="✅ Aceptar" />
   
                       <Button onAction="#clicModificar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" text="✏️ Modificar" />
                   </children>
               </HBox>
           </children>
   
           <padding>
               <Insets bottom="25" left="30" right="30" top="25" />
           </padding>
       </VBox>
   </children>

</AnchorPane>
