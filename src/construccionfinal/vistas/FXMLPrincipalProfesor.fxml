<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="construccionfinal.controladores.FXMLPrincipalProfesorController"
            prefHeight="650.0" prefWidth="900.0">

    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="30"
              style="-fx-background-color: #2C3E50; -fx-padding: 15 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0.3, 0, 4);">
            <children>
                <Label text="SGPP - Panel Profesor"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Pane HBox.hgrow="ALWAYS"/>
                <Button onAction="#btnCerrarSesion"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 15; -fx-font-size: 16px;"
                        text="Cerrar Sesión" />
            </children>
        </HBox>
    </top>

    <!-- Menú lateral izquierdo -->
    <left>
        <VBox alignment="TOP_LEFT" spacing="25"
              style="-fx-background-color: #ecf0f1; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 5, 0.3, 1, 2);">
            <children>
                <Label text="Opciones del sistema" style="-fx-font-size: 20px; -fx-text-fill: #34495e; -fx-font-weight: bold;" />
                <Label fx:id="lblNombreUsuario" text="Usuario: " style="-fx-font-size: 16px; -fx-text-fill: #555555;" />
            <Button fx:id="btnEstudiantes" layoutX="35.0" layoutY="112.0" onAction="#clicEstudiantes" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 16;" text="Estudiantes" />
            </children>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <ImageView fitHeight="220.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@imagenes/Navegador.png" />
                </image>
            </ImageView>
        </StackPane>
    </center>

</BorderPane>