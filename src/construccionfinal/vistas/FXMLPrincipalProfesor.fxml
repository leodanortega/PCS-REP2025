<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="construccionfinal.controladores.FXMLPrincipalProfesorController">

    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2C3E50; -fx-padding: 12 20 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 2);">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="SGPP - Panel Estudiante" />
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Button onAction="#btnCerrarSesion" style="-fx-background-color: purple; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;" text="Cerrar Sesión" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Menú lateral izquierdo -->
    <left>
        <VBox alignment="TOP_LEFT" spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 25 25 25 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 3, 0.2, 1, 1);">
            <children>
                <Label style="-fx-font-size: 18px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Opciones del sistema" />
                <Label fx:id="lblNombreUsuario" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 14px;" text="Usuario: " />
                <Button fx:id="btnEvaluarEstudiante" onAction="#btnEvaluarEstudiante" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 16;" text="Evaluar estudiante" />
            <Button fx:id="btnEstudiantes" layoutX="35.0" layoutY="112.0" onAction="#clicEstudiantes" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 16;" text="Estudiantes" />
            </children>
        </VBox>
    </left>

    <center>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@imagenes/Navegador.png" />
            </image>
        </ImageView>
    </center>

</BorderPane>
